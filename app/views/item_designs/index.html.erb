<section class="section pb-5">

  <div class="">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
     <div class="search-box is-flex is-justify-content-center">
        <div class="search-text">
          <%= form_tag(item_designs_path, method: "get") do %>
          <%#= select_tag "search", options_from_collection_for_select(ItemDesign.all, :name, :name), class: 'select2'%>
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search for an item" %>
        </div>
        <div class="search-icon is-flex">
          <%= button_tag(type: "submit", class: "btn-default") do %>
            <i class="fas fa-search fa-lg search-icon"></i>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

</section>

<section class="section pt-5">
  <div class="container">
    <h2 class="subtitle px-2">Items</h2>
    <p><% @items.each do |item| %></p>
      <%= link_to item_design_path(item) do %>
        <div class="card px-2 pt-2 my-5 is-flex">
          <div class="card-image">
            <figure class="image image-item is-96x96 center">
              <%= image_tag item.design %>
            </figure>
          </div>
          <div class="card-content">
            <div class="card-content-title pb-2">
              <h2 class="has-text-weight-bold">
                <p><%= item.name %></p>
                <p><%= "#{item.refund_currency} #{item.refund_cents}" %></p>
              </h2>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</section>

